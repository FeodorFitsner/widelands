#!/usr/bin/python -tt

class EvalMatches( object ):
    def __call__(self, data):
        errors = []
        curline = 1
        for l in data.splitlines():
            l = l.replace("\t"," "*3)
            if len(l) >= 80:
                errors.append( (curline, "Line is too long! Keep it < 80 chars (with tab width of 3)"))
            curline += 1
        return errors


is_multiline = True

evaluate_matches = EvalMatches()

allowed = [
    "\t\tResonable sized line",
    " "*79,
    '\t\t' + 73*"a"
]
forbidden = [
    " "*79+"a",
    '\t\t' + 75*"a"
]
