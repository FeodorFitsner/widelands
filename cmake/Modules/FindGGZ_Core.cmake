FIND_PATH(GGZ_CORE_INCLUDE_DIR ggzmod.h)

FIND_LIBRARY(GGZ_MOD_LIB NAMES ggzmod)
FIND_LIBRARY(GGZ_CORE_LIB NAMES ggzcore)
FIND_LIBRARY(GGZ_LIB NAMES ggz)

IF (GGZ_CORE_INCLUDE_DIR AND GGZ_MOD_LIB AND GGZ_CORE_LIB AND GGZ_LIB)
   SET(GGZ_CORE_FOUND TRUE)
   SET(GGZ_CORE_LIBRARY ${GGZ_MOD_LIB};${GGZ_CORE_LIB};${GGZ_LIB})
ENDIF (GGZ_CORE_INCLUDE_DIR AND GGZ_MOD_LIB AND GGZ_CORE_LIB AND GGZ_LIB)

IF (GGZ_CORE_FOUND)
   IF (NOT GGZ_Core_FIND_QUIETLY)
      MESSAGE(STATUS "Found GGZ_Core: ${GGZ_CORE_LIBRARY}")
   ENDIF (NOT GGZ_Core_FIND_QUIETLY)
ELSE (GGZ_CORE_FOUND)
   IF (GGZ_Core_FIND_REQUIRED)
      MESSAGE(FATAL_ERROR "Could not find GGZ_Core")
   ENDIF (GGZ_Core_FIND_REQUIRED)
ENDIF (GGZ_CORE_FOUND)