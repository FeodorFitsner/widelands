help=_Plants and harvests blackroot.
program=plant
program=harvest

[buildcost]
carrier=1
shovel=1

[plant]
0=setdescription tribe:blackrootfield_t
1=findspace size:any radius:2
2=walk coords
3=animation planting 4000
4=plant
5=animation planting 4000
6=return

[harvest]
0=findobject attrib:blackrootfield radius:2
1=walk object
2=animation harvesting 10000
3=object harvest
4=animation gathering 2000
5=createitem blackroot
6=return

[idle]
pics=idle_??.png
hotspot=20 24
playercolor=true

[walk]
dirpics=walk_!!_??.png
hotspot=20 24
playercolor=true
fps=10

[walkload]
dirpics=walk_!!_??.png
hotspot=20 24
playercolor=true
fps=10

