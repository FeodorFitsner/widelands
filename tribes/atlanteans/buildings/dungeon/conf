[Sleep]
sleep=5000

[attack]
min_level=0
max_level=3

[upgrade_attack_0]
check_soldier=attack 0 # Fails when aren't any soldier of level 0 attack
sleep=30000
check_soldier=attack 0 # Fails when aren't any soldier of level 0 attack
consume=bread smoked_fish,smoked_meat long_trident
train=attack 0 1

[upgrade_attack_1]
check_soldier=attack 1 # Fails when aren't any soldier of level 0 attack
sleep=30000
check_soldier=attack 1 # Fails when aren't any soldier of level 0 attack
consume=bread smoked_fish,smoked_meat steel_trident
train=attack 1 2

[upgrade_attack_2]
check_soldier=attack 2 # Fails when aren't any soldier of level 0 attack
sleep=30000
check_soldier=attack 2 # Fails when aren't any soldier of level 0 attack
consume=bread smoked_fish,smoked_meat double_trident
train=attack 2 3

[upgrade_attack_3]
check_soldier=attack 3 # Fails when aren't any soldier of level 0 attack
sleep=30000
check_soldier=attack 3 # Fails when aren't any soldier of level 0 attack
consume=bread smoked_fish,smoked_meat heavy_double_trident
train=attack 3 4

