[global]
soundfx=../../../sound/farm/scythe
help=plants fields.
type=generic
program=plant
program=harvest

[buildcost]
carrier=1
scythe=1

[plant]
0=setdescription tribe:cornfield_t
1=findspace size:any radius:2
2=walk coords
3=animation idle 500
4=plant
5=animation idle 500
6=return

[harvest]
0=findobject attrib:cornfield radius:2
1=walk object
2=playFX ../../../sound/farm/scythe 220
3=animation idle 10000
4=object harvest
5=animation idle 2000
6=createitem corn
7=return

[idle]
pics=idle_??.png
hotspot=5 13

[walk]
dirpics=walk_!!_??.png
hotspot=5 13

[walkload]
dirpics=walk_!!_??.png
hotspot=5 13
