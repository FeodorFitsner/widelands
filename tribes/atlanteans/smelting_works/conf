type=production
size=medium
output=iron
output=gold
program=smelt_iron
program=smelt_gold
program=work

[working positions]
smelter=1

[inputs]
ironore=8
goldore=8
coal=8

[work]
call=smelt_iron
call=smelt_gold
return=skipped

[smelt_iron]
return=skipped unless economy needs iron
consume=ironore coal
sleep=25000
animate=working 35000
produce=iron

[smelt_gold]
return=skipped unless economy needs gold
consume=goldore coal
sleep=25000
animate=working 35000
produce=gold

[buildcost]
trunk=1
stone=4
planks=1
spidercloth=1

[idle]
pics=smelting_works_i_??.png  # ???
hotspot=62 71
playercolor=true

[working]
pics=smelting_works_i_??.png  # ???
hotspot=62 71
playercolor=true
