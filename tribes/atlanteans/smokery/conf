size=medium
output=smoked_meat
output=smoked_fish

[aihints]
build_material=false
is_food_basic=true

[buildcost]
log=1
stone=4
planks=1
spidercloth=1

[return_on_dismantle]
stone=3

[working positions]
smoker=1

[inputs]
fish=4
meat=4
log=8

[programs]
smoke_meat=_Smoke meat
smoke_fish=_Smoke fish
work=_Work

[smoke_meat]
return=skipped when site has fish and economy needs smoked_fish and not economy needs smoked_meat
return=skipped unless economy needs smoked_meat
sleep=30000
consume=meat:2 log
animate=working 30000
produce=smoked_meat:2

[smoke_fish]
return=skipped when site has meat and economy needs smoked_meat and not economy needs smoked_fish
return=skipped unless economy needs smoked_fish
sleep=30000
consume=fish:2 log
animate=working 30000
produce=smoked_fish:2

[work]
call=smoke_fish
call=smoke_meat
call=smoke_fish
return=skipped

[idle]
pics=smokery_i_??.png  # ???
hotspot=53 58

[working]
pics=smokery_b_??.png  # ???
hotspot=53 68
fps=20
