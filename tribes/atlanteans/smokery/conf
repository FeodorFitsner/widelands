program=smoke_fish
program=work

[working positions]
smoker=1

[inputs]
fish=4
meat=4
trunk=8

[work]
call=smoke_meat
call=smoke_fish
return=skipped

[smoke_meat]
return=skipped unless economy needs smoked_meat
consume=meat trunk
sleep=15000
animate=working 15000
produce=smoked_meat

[smoke_fish]
return=skipped unless economy needs smoked_fish
consume=fish trunk
sleep=15000
animate=working 15000
produce=smoked_fish

[buildcost]
