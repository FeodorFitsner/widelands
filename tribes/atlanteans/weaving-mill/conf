size=big
output=spidercloth
output=tabard
output=tabard_golden

[aihints]
forced_after=60
prohibited_till=60

[buildcost]
log=3
granite=4
planks=2

[return_on_dismantle]
log=1
granite=3
planks=1

[working positions]
weaver=1

[inputs]
spider_silk=8
gold_thread=4

[programs]
# TRANSLATORS: "Completed/Skipped/Did not start weaving spidercloth because ...
produce_spidercloth=_weaving spidercloth
# TRANSLATORS: "Completed/Skipped/Did not start tailoring a tabard because ...
produce_tabard=_tailoring a tabard
# TRANSLATORS: "Completed/Skipped/Did not start tailoring a golden tabard because ...
produce_tabard_golden=_tailoring a golden tabard
# TRANSLATORS: "Completed/Skipped/Did not start working because ...
work=_working

[produce_spidercloth]
return=skipped unless economy needs spidercloth
sleep=20000
consume=spider_silk
animate=working 20000
produce=spidercloth

[produce_tabard]
return=skipped unless economy needs tabard
sleep=20000
consume=spider_silk
animate=working 20000
produce=tabard

[produce_tabard_golden]
return=skipped unless economy needs tabard_golden
sleep=20000
consume=spider_silk gold_thread
animate=working 20000
produce=tabard_golden

[work]
call=produce_spidercloth
call=produce_tabard
call=produce_tabard_golden
return=skipped

