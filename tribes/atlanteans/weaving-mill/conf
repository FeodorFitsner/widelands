size=big
output=spidercloth
output=tabard
output=golden_tabard

[aihints]
is_basic=true

[buildcost]
log=3
stone=4
planks=2

[return_on_dismantle]
log=1
stone=3
planks=1

[working positions]
weaver=1

[inputs]
spideryarn=8
gold_yarn=4

[programs]
# TRANSLATORS: "Completed/Skipped/Did not start weaving spidercloth because ...
produce_spidercloth=_weaving spidercloth
# TRANSLATORS: "Completed/Skipped/Did not start tailoring a tabard because ...
produce_tabard=_tailoring a tabard
# TRANSLATORS: "Completed/Skipped/Did not start tailoring a golden tabard because ...
produce_golden_tabard=_tailoring a golden tabard
# TRANSLATORS: "Completed/Skipped/Did not start working because ...
work=_working

[produce_spidercloth]
return=skipped unless economy needs spidercloth
sleep=20000
consume=spideryarn
animate=working 20000
produce=spidercloth

[produce_tabard]
return=skipped unless economy needs tabard
sleep=20000
consume=spideryarn
animate=working 20000
produce=tabard

[produce_golden_tabard]
return=skipped unless economy needs golden_tabard
sleep=20000
consume=spideryarn gold_yarn
animate=working 20000
produce=golden_tabard

[work]
call=produce_spidercloth
call=produce_tabard
call=produce_golden_tabard
return=skipped

[idle]
pics=weaving_mill_i_??.png  # ???
hotspot=65 69

[working]
pics=weaving_mill_i_??.png # ???
hotspot=65 69

