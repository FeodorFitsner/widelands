1=call mine_stone
2=call mine_crystal
3=call mine_diamond

[mine_stone]
0=set +catch
1=sleep 45000
2=consume smoked_fish,smoked_meat 2
3=consume bread 2
4=animation working 20000
5=mine granit 4 100 5
6=produce stone
7=mine granit 4 100 5
8=produce stone
9=mine granit 4 100 5
10=produce mountain_crystal

