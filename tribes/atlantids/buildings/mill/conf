[global]
descname=_"Mill"
type=production
size=medium
buildable=yes
buildicon=mill_build.png
worker=miller
program=work
program=produce_cornflour
program=produce_blackrootflour
output=cornflour
output=blackrootflour
stopable=yes

[buildcost]
trunk=3
stone=3
planks=2

[inputs]
corn=6
blackroot=6

[work]
0=set +nostats
1=call produce_cornflour
2=call produce_blackrootflour

[produce_cornflour]
0=set +catch
1=sleep 3500
2=check corn
3=consume corn
4=animation working 15000
5=produce cornflour

[produce_blackrootflour]
0=set +catch
1=sleep 3500
2=check blackroot
3=consume blackroot
4=animation working 15000
5=produce blackrootflour

[idle]
pics=mill_i_??.png
hotspot=45 90

[working]
pics=mill_i_??.png # lets see the mill turn!
hotspot=45 90
fps=25

[build]
pics=mill_i_??.png
hotspot=45 90
