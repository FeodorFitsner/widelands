[global]
descname=_"Smelting Works"
type=production
size=medium
buildable=yes
buildicon=smelting_works_build.png
worker=smelter
output=iron
output=gold
program=smelt_iron
program=smelt_gold
program=work

[inputs]
ironore=8
goldore=8
coal=8

[work]
call=smelt_iron
call=smelt_gold
return=skipped

[smelt_iron]
return=skipped unless economy needs iron
consume=ironore coal
sleep=25000
animate=working 35000
produce=iron

[smelt_gold]
return=skipped unless economy needs gold
consume=goldore coal
sleep=25000
animate=working 35000
produce=gold

[buildcost]
trunk=1
stone=4
planks=1
spidercloth=1

