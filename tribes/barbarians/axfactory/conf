size=medium
buildable=no
output=ax
output=sharpax
output=broadax
enhanced_building=yes
enhancement=warmill

[aihints]

[enhancement_cost]
log=1
blackwood=1
raw_stone=2
grout=1
thatchreed=1

[return_on_dismantle_on_enhanced]
blackwood=1
raw_stone=1
grout=1

[working positions]
blacksmith=1

[inputs]
iron=8
coal=8

[programs]
# TRANSLATORS: "Completed/Skipped/Did not start forging an ax because ...
produce_ax=_forging an ax
# TRANSLATORS: "Completed/Skipped/Did not start forging a sharp ax because ...
produce_sharpax=_forging a sharp ax
# TRANSLATORS: "Completed/Skipped/Did not start forging a broad ax because ...
produce_broadax=_forging a broad ax
# TRANSLATORS: "Completed/Skipped/Did not start working because ...
work=_working

[produce_ax]
return=skipped unless economy needs ax
sleep=32000
consume=coal iron
playFX=../../../sound/smiths/smith 192
animate=working 25000
playFX=../../../sound/smiths/sharpening 192
produce=ax

[produce_sharpax]
return=skipped unless economy needs sharpax
sleep=32000
consume=coal iron:2
playFX=../../../sound/smiths/smith 192
animate=working 25000
playFX=../../../sound/smiths/sharpening 192
produce=sharpax

[produce_broadax]
return=skipped unless economy needs broadax
sleep=32000
consume=coal:2 iron:2
playFX=../../../sound/smiths/smith 192
animate=working 25000
playFX=../../../sound/smiths/sharpening 192
produce=broadax

[work]
call=produce_ax
call=produce_sharpax
call=produce_broadax
return=skipped

