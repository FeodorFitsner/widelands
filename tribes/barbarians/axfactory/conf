size=medium
buildable=no
output=ax
output=ax_sharp
output=ax_broad
enhanced_building=yes
enhancement=warmill

[aihints]

[enhancement_cost]
log=1
blackwood=1
granite=2
grout=1
thatch_reed=1

[return_on_dismantle_on_enhanced]
blackwood=1
granite=1
grout=1

[working positions]
blacksmith=1

[inputs]
iron=8
coal=8

[programs]
# TRANSLATORS: "Completed/Skipped/Did not start forging an ax because ...
produce_ax=_forging an ax
# TRANSLATORS: "Completed/Skipped/Did not start forging a sharp ax because ...
produce_ax_sharp=_forging a sharp ax
# TRANSLATORS: "Completed/Skipped/Did not start forging a broad ax because ...
produce_ax_broad=_forging a broad ax
# TRANSLATORS: "Completed/Skipped/Did not start working because ...
work=_working

[produce_ax]
return=skipped unless economy needs ax
sleep=32000
consume=coal iron
playFX=../../../sound/smiths/smith 192
animate=working 25000
playFX=../../../sound/smiths/sharpening 192
produce=ax

[produce_ax_sharp]
return=skipped unless economy needs ax_sharp
sleep=32000
consume=coal iron:2
playFX=../../../sound/smiths/smith 192
animate=working 25000
playFX=../../../sound/smiths/sharpening 192
produce=ax_sharp

[produce_ax_broad]
return=skipped unless economy needs ax_broad
sleep=32000
consume=coal:2 iron:2
playFX=../../../sound/smiths/smith 192
animate=working 25000
playFX=../../../sound/smiths/sharpening 192
produce=ax_broad

[work]
call=produce_ax
call=produce_ax_sharp
call=produce_ax_broad
return=skipped

[idle]
pics=axfactory_i_??.png  # ???
hotspot=57 76

[build]
pics=axfactory_b_??.png  # ???
hotspot=57 76

[unoccupied]
pics=axfactory_u_??.png  # ???
hotspot=57 76

[working]
pics=axfactory_w_??.png  # ???
hotspot=57 76
fps=10
