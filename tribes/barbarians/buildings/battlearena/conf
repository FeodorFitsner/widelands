[global]
descname=_ Battle Arena
type=training
size=big
buildable=yes
buildicon=battlearena_build.png
worker=carrier
max_soldiers=8
train=evade
program=Sleep
program=upgrade_evade_0 # This is needed to run the scripts
program=upgrade_evade_1

[Sleep]
0=sleep 5000

[evade]
min_level=0
max_level=2

[upgrade_evade_0]
0=check pittabread
1=check fish,meat
2=check_soldier evade 0 # Fails when aren't any soldier of level 0 attack
3=sleep 30000
4=check_soldier evade 0 # Because the soldier can be expulsed by the player
5=consume pittabread
6=consume fish,meat
7=train evade 0 1

[upgrade_evade_1]
0=check pittabread 2
1=check fish
2=check meat
3=check_soldier evade 1 # Fails when aren't any soldier of level 0 attack
4=sleep 30000
5=check_soldier evade 1 # Because the soldier can be expulsed by the player
6=consume pittabread 2
7=consume fish
8=consume meat
9=train evade 1 2

[inputs]
pittabread=10
fish=6
meat=6

[buildcost]
trunk=6
raw_stone=4
grindstone=6
gold=4
thatchreed=3

[idle]
pics=battlearena_i_??.png  # ???
hot_spot_x=82
hot_spot_y=98

[working]
pics=battlearena_i_??.png  # ???
hot_spot_x=82
hot_spot_y=98

[build]
pics=battlearena_i_??.png  # ???
hot_spot_x=82
hot_spot_y=98
