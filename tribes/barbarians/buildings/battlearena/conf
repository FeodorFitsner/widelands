[global]
descname=_ Battle Arena
type=training
size=big
buildable=yes
buildicon=battlearena_build.png
worker=carrier
max_soldiers=8
train=evade
program=Sleep
program=upgrade_evade_0 # This is needed to run the scripts
program=upgrade_evade_1

[Sleep]
0=sleep 5000

[evade]
min_level=0
max_level=1

[upgrade_evade_0]
0=check pittabread
1=check fish,meat
2=check strongbeer
3=check_soldier evade 0 # Fails when aren't any soldier of level 0 evade
4=sleep 30000
5=check_soldier evade 0 # Because the soldier can be expulsed by the player
6=consume pittabread
7=consume fish,meat
8=consume strongbeer
7=train evade 0 1

[upgrade_evade_1]
0=check pittabread 2
1=check fish,meat
2=check strongbeer
3=check_soldier evade 1 # Fails when aren't any soldier of level 1 evade
4=sleep 30000
5=check_soldier evade 1 # Because the soldier can be expulsed by the player
6=consume pittabread 2
7=consume fish,meat
8=consume strongbeer
9=train evade 1 2

[inputs]
pittabread=10
fish=6
meat=6
strongbeer=6

[buildcost]
trunk=6
raw_stone=4
grout=6
gold=4
thatchreed=3

[idle]
pics=battlearena_i_??.png  # ???
hotspot=80 77

[working]
pics=battlearena_i_??.png  # ???
hotspot=80 77

[build]
pics=battlearena_i_??.png  # ???
hotspot=80 77
