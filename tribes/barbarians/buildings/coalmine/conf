[global]
descname=Coal mine		# nicer name to display in GUI

type=production		# basic type (warehouse, production, military)
size=mine
buildable=yes
buildicon=coalminebuild.png
worker=miner
program=work
output=coalearth
stopable=yes
enhances_to=deep_coalmine

[inputs]
ration=6

[work]
0=sleep 45000
1=consume ration 
2=animation working 20000
3=mine coal 2 33 5       # mine coal in a radius of 2 up to 25% of total available, 3% chances to hit after this 
4=produce coalearth

[buildcost]
trunk=4
raw_stone=2

