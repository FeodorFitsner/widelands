[global]
descname=Fernery  # nicer name to display in GUI

type=production		# basic type (warehouse, production, military)
size=medium
buildable=yes
buildicon=build.png
worker=ferner  
output=thatchfern

program=work
program=plant
program=harvest

[work]
0=set +nostats # ending this program has no effect on statistics
1=call plant
2=call harvest

[plant]
0=set +catch   # failure of this program will be caught
1=sleep 20000  # sleep the given amount of time
2=worker plant # cause the worker to run the 'plant' program

[harvest]
0=set +catch
1=sleep 5000      # sleep the given amount of time
2=worker harvest  # cause the worker to run the 'harvest' program

[buildcost]
trunk=5
raw_stone=2

[idle]
pics=i_??.png  # ???
hot_spot_x=40
hot_spot_y=40
clrkey_r=255
clrkey_g=255
clrkey_b=0
shadowclr_r=255
shadowclr_g=0
shadowclr_b=0

[build]
pics=i_??.png  # ???
hot_spot_x=40
hot_spot_y=40
clrkey_r=255
clrkey_g=255
clrkey_b=0
shadowclr_r=255
shadowclr_g=0
shadowclr_b=0

[working]
pics=i_??.png  # ???
hot_spot_x=40
hot_spot_y=40
