[global]
descname=_ Stonegrinder		# nicer name to display in GUI
type=production		# basic type (warehouse, production, military)
size=medium
buildable=yes
buildicon=stonegrinder_build.png
worker=stonemason    # like quary
program=work
output=grindstone
soundfx=stonegrinder

[inputs]
raw_stone=4
water=4

[work]
0=sleep 50000
1=check raw_stone
2=check water
3=consume raw_stone
4=consume water
5=playFX stonegrinder 192
6=animation working 32000
7=produce grindstone


[buildcost]
trunk=4
raw_stone=2         # expensive

