[global]
help=Releases animals.
type=generic
program=release

[buildcost]
carrier=1

[release]
0=setbobdescription tribe:wildboar tribe:deer sheep
1=findspace size:any radius:3
2=walk coords
3=animation releasein 2000 # Play a releasing animation
4=create_bob
5=animation releaseout 2000
6=return

[releasein]
pics=releasein_??.png
hotspot=15 23
fps=5
playercolor=true

[releaseout]
pics=releaseout_??.png
hotspot=15 23
fps=5
playercolor=true

[idle]
pics=idle_??.png
hotspot=15 23
playercolor=true

[walk]
dirpics=walk_!!_??.png
hotspot=15 23
fps=10
playercolor=true

[walkload]
dirpics=walkload_!!_??.png
hotspot=15 23
