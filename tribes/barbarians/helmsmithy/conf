size=big
output=helmet
output=helmet_mask
output=helmet_warhelm

[aihints]
prohibited_till=1200

[buildcost]
log=3
blackwood=1
granite=2
grout=2
thatch_reed=3

[return_on_dismantle]
log=1
granite=2
grout=1
thatch_reed=1

[working positions]
helmsmith=1

[inputs]
iron=8
gold=8
coal=8

[programs]
# TRANSLATORS: "Completed/Skipped/Did not start forging a helmet because ...
produce_helmet=_forging a helmet
# TRANSLATORS: "Completed/Skipped/Did not start forging a mask because ...
produce_helmet_mask=_forging a mask
# TRANSLATORS: "Completed/Skipped/Did not start forging a warhelm because ...
produce_helmet_warhelm=_forging a warhelm
# TRANSLATORS: "Completed/Skipped/Did not start working because ...
work=_working

[produce_helmet]
return=skipped unless economy needs helmet
sleep=32000
consume=coal iron
animate=working 35000
produce=helmet

[produce_helmet_mask]
return=skipped unless economy needs helmet_mask
sleep=32000
consume=coal iron:2
animate=working 45000
produce=helmet_mask

[produce_helmet_warhelm]
return=skipped unless economy needs helmet_warhelm
sleep=32000
consume=coal gold iron:2
animate=working 55000
produce=helmet_warhelm

[work]
call=produce_helmet
call=produce_helmet_mask
call=produce_helmet_warhelm
return=skipped

