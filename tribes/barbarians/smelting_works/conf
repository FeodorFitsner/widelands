[smelt_iron]
return=skipped unless economy needs iron
consume=coal ironore
sleep=32000
animate=working 35000
produce=iron

[smelt_gold]
return=skipped unless economy needs gold
consume=coal goldstone
sleep=32000
animate=working 35000
produce=gold

[work]
call=smelt_iron
call=smelt_gold
return=skipped

