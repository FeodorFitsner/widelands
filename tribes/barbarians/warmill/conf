size=medium
buildable=no
output=ax
output=ax_sharp
output=ax_broad
output=ax_bronze
output=ax_battle
output=ax_warriors
enhanced_building=yes

[aihints]

[enhancement_cost]
log=1
blackwood=1
granite=2
grout=1
thatch_reed=1

[return_on_dismantle_on_enhanced]
blackwood=1
granite=1
grout=1

[working positions]
master-blacksmith=1
blacksmith=1

[inputs]
iron=8
coal=8
gold=8

[programs]
# TRANSLATORS: "Completed/Skipped/Did not start forging an because ...
produce_ax=_forging an ax
# TRANSLATORS: "Completed/Skipped/Did not start forging a sharp ax because ...
produce_ax_sharp=_forging a sharp ax
# TRANSLATORS: "Completed/Skipped/Did not start forging a broad ax because ...
produce_ax_broad=_forging a broad ax
# TRANSLATORS: "Completed/Skipped/Did not start forging a bronze ax because ...
produce_ax_bronze=_forging a bronze ax
# TRANSLATORS: "Completed/Skipped/Did not start forging a battle ax because ...
produce_ax_battle=_forging a battle ax
# TRANSLATORS: "Completed/Skipped/Did not start forging a warrior’s ax because ...
produce_ax_warriors=_forging a warrior’s ax
# TRANSLATORS: "Completed/Skipped/Did not start working because ...
work=_working

[produce_ax]
return=skipped unless economy needs ax
sleep=32000
consume=coal iron
playFX=../../../sound/smiths/smith 192
animate=working 25000
playFX=../../../sound/smiths/sharpening 192
produce=ax

[produce_ax_sharp]
return=skipped unless economy needs ax_sharp
sleep=32000
consume=coal iron:2
playFX=../../../sound/smiths/smith 192
animate=working 25000
playFX=../../../sound/smiths/sharpening 192
produce=ax_sharp

[produce_ax_broad]
return=skipped unless economy needs ax_broad
sleep=32000
consume=coal:2 iron:2
playFX=../../../sound/smiths/smith 192
animate=working 25000
playFX=../../../sound/smiths/sharpening 192
produce=ax_broad

[produce_ax_bronze]
return=skipped unless economy needs ax_bronze
sleep=32000
consume=coal:2 iron:2
playFX=../../../sound/smiths/smith 192
animate=working 25000
playFX=../../../sound/smiths/sharpening 192
produce=ax_bronze

[produce_ax_battle]
return=skipped unless economy needs ax_battle
sleep=32000
consume=coal gold iron:2
playFX=../../../sound/smiths/smith 192
animate=working 25000
playFX=../../../sound/smiths/sharpening 192
produce=ax_battle

[produce_ax_warriors]
return=skipped unless economy needs ax_warriors
sleep=32000
consume=coal:2 gold:2 iron:2
playFX=../../../sound/smiths/smith 192
animate=working 25000
playFX=../../../sound/smiths/sharpening 192
produce=ax_warriors

[work]
call=produce_ax
call=produce_ax_sharp
call=produce_ax_broad
call=produce_ax_bronze
call=produce_ax_battle
call=produce_ax_warriors
return=skipped

