[release]
0=setbobdescription tribe:wildboar tribe:deer sheep
1=findspace size:any radius:3
2=walk coords
3=animation idle 500 # Play a releasing animation
4=create_bob
5=animation idle 500
6=return

[idle]
pics=idle_??.png
hotspot=5 13

[walk]
