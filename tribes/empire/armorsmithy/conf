size=medium
output=armor_helmet
output=armor
output=armor_chain
output=armor_gilded

[aihints]
prohibited_till=900

[buildcost]
log=2
granite=2
marble=2
marble_column=3

[return_on_dismantle]
granite=1
marble=1
marble_column=2

[working positions]
armorsmith=1

[inputs]
iron=8
gold=8
coal=8
cloth=8

[programs]
# TRANSLATORS: "Completed/Skipped/Did not start forging a armor_helmet because ...
produce_armor_helmet=_forging a helmet
# TRANSLATORS: "Completed/Skipped/Did not start forging an armor because ...
produce_armor=_forging an armor
# TRANSLATORS: "Completed/Skipped/Did not start forging a chain armor because ...
produce_armor_chain=_forging a chain armor
# TRANSLATORS: "Completed/Skipped/Did not start forging a gilded armor because ...
produce_armor_gilded=_forging a gilded armor
# TRANSLATORS: "Completed/Skipped/Did not start working because ...
work=_working

[produce_armor_helmet]
return=skipped unless economy needs armor_helmet
sleep=32000
consume=iron coal
animate=working 35000
produce=armor_helmet

[produce_armor]
return=skipped unless economy needs armor
sleep=32000
consume=iron coal cloth
animate=working 45000
produce=armor

[produce_armor_chain]
return=skipped unless economy needs armor_chain
sleep=32000
consume=iron:2 coal cloth
animate=working 45000
produce=armor_chain

[produce_armor_gilded]
return=skipped unless economy needs armor_gilded
sleep=32000
consume=iron:2 coal:2 cloth gold
animate=working 45000
produce=armor_gilded

[work]
call=produce_armor_helmet
call=produce_armor
call=produce_armor_chain
call=produce_armor_gilded
return=skipped

