[global]
descname=_ Marble Mine
type=production
size=mine
buildable=yes
buildicon=marblemine_build.png
worker=miner
program=work
program=prog_marble
program=prog_stone
output=marble
output=stone
stopable=yes
enhances_to=deep_marblemine

[inputs]
ration=6
wine=6

[work]
0=set +nostats
1=call prog_marble
2=call prog_stone

[prog_marble]
0=set +catch
1=sleep 20000
2=check ration
3=check wine
4=consume ration
5=consume wine
6=animation working 20000
7=mine granit 2 50 5
8=produce marble
9=produce marble
10=animation working 20000
11=mine granit 2 50 5
12=produce marble
13=produce stone

[prog_stone]
0=set +catch
1=sleep 20000
2=check ration
3=check wine
4=consume ration
5=consume wine
6=animation working 20000
7=mine granit 2 50 5
8=produce stone
9=produce marble
10=animation working 20000
11=mine granit 2 50 5
12=produce stone
13=produce stone

[buildcost]
trunk=4
wood=2

[idle]
pics=marblemine_i_??.png
hotspot=49 49

[working]
pics=marblemine_w_??.png
hotspot=49 49
fps=10

[build]
pics=marblemine_i_??.png
hotspot=49 49
