program=upgrade_evade_0 # This is needed to run the scripts
program=upgrade_evade_1

[Sleep]
sleep=5000

[evade]
min_level=0
max_level=1

[upgrade_evade_0]
check_soldier=evade 0 # Fails when aren't any soldier of level 0 attack
sleep=30000
check_soldier=evade 0 # Because the soldier can be expulsed by the player
consume=bread fish,meat
train=evade 0 1

[upgrade_evade_1]
check_soldier=evade 1 # Fails when aren't any soldier of level 0 attack
sleep=30000
check_soldier=evade 1 # Because the soldier can be expulsed by the player
consume=bread fish,meat
train=evade 1 2

[inputs]
bread=10
fish=6
meat=6

[buildcost]
