soundfx=../../../sound/farm/scythe
help=_Plants fields.
program=plant
program=harvest

[buildcost]
carrier=1
scythe=1

[plant]
0=setdescription tribe:field0t
1=findspace size:any radius:2 space
2=walk coords
3=animation planting 4000  
4=plant
5=animation planting 4000  
6=return

[harvest]
0=findobject attrib:wheat radius:2
1=walk object
2=playFX ../../../sound/farm/scythe 220
3=animation harvesting 10000
4=object harvest
5=animation gathering 4000  
6=createitem wheat
7=return

