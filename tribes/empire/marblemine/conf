[mine_marble]
sleep=20000
return=skipped unless economy needs marble or economy needs stone
consume=wine ration
animate=working 20000
mine=granite 2 50 5 17
produce=marble:2
animate=working 20000
mine=granite 2 50 5 17
produce=marble stone

[mine_stone]
sleep=20000
return=skipped unless economy needs marble or economy needs stone
consume=ration wine
animate=working 20000
mine=granite 2 50 5 17
produce=stone marble
animate=working 20000
mine=granite 2 50 5 17
produce=stone:2

