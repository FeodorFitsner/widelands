size=small
output=granite
output=marble

[aihints]
forced_after=0
stoneproducer=true

[buildcost]
log=2
planks=1

[return_on_dismantle]
log=1

[working positions]
stonemason=1

[programs]
# TRANSLATORS: "Completed/Skipped/Did not start quarrying stone because ...
mine_granite=_quarrying granite
# TRANSLATORS: "Completed/Skipped/Did not start quarrying marble because ...
mine_marble=_quarrying marble
# TRANSLATORS: "Completed/Skipped/Did not start working because ...
work=_working

[mine_granite]
worker=cut_granite  # This order is on purpose so that the productivity
sleep=25000        # drops fast once all stones are gone.

[mine_marble]
worker=cut_marble  # This order is on purpose so that the productivity
sleep=25000        # drops fast once all stones are gone.

[work]
call=mine_granite
call=mine_granite
call=mine_granite
call=mine_marble # 2 of 7 times it finds marble
call=mine_granite
call=mine_granite
call=mine_marble # 2 of 7 times it finds marble
return=skipped

