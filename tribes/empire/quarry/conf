size=small
output=stone
output=marble

[buildcost]
log=2
wood=1

[return_on_dismantle]
log=1

[working positions]
stonemason=1

[aihints]
is_basic=true
stoneproducer=true

[programs]
mine_stone=_Mine stone
mine_marble=_Mine marble
work=_Work

[mine_stone]
worker=cut_stone  # This order is on purpose so that the productivity 
sleep=25000       # drops fast once all stones are gone.

[mine_marble]
worker=cut_marble  # This order is on purpose so that the productivity 
sleep=25000        # drops fast once all stones are gone.

[work]
call=mine_stone
call=mine_stone
call=mine_stone
call=mine_marble # 2 of 7 times it finds marble
call=mine_stone
call=mine_stone
call=mine_marble # 2 of 7 times it finds marble
return=skipped

[idle]
pics=quarry_i_??.png  # ???
hotspot=42 57
