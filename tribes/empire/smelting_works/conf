size=medium
output=iron
output=gold

[aihints]
build_material=false

[buildcost]
trunk=1
stone=4
marble=2

[working positions]
smelter=1

[inputs]
ironore=8
goldstone=8
coal=8

[programs]
smelt_iron=_Smelt iron
smelt_gold=_Smelt gold
work=_Work

[smelt_iron]
return=skipped when site has goldstone and economy needs gold and not economy needs iron
return=skipped when economy needs coal and not economy needs iron
consume=ironore coal
sleep=25000
animate=working 35000
produce=iron

[smelt_gold]
return=skipped when site has ironore and economy needs iron and not economy needs gold
return=skipped when economy needs coal and not economy needs gold
consume=goldstone coal
sleep=25000
animate=working 35000
produce=gold

[work]
call=smelt_iron
call=smelt_gold
call=smelt_iron
return=skipped

[idle]
pics=smelting_works_i_??.png  # ???
hotspot=44 42

[working]
