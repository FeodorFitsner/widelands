[global]
type=training
size=big
worker=trainer
max_soldiers=12
train=attack,hp
program=Sleep
program=upgrade_attack_0 # This is needed to run the scripts
program=upgrade_attack_1
program=upgrade_attack_2
program=upgrade_attack_3
program=upgrade_hp_0
program=upgrade_hp_1
program=upgrade_hp_2
program=upgrade_hp_3

[Sleep]
sleep=5000

[attack]
min_level=0
max_level=3

[hp]
min_level=0
max_level=3

[upgrade_attack_0]
check_soldier=attack 0 # Fails when aren't any soldier of level 0 attack
sleep=30000
check_soldier=attack 0 # Because the soldier can be expulsed by the player
consume=lance bread,fish,meat
train=attack 0 1

[upgrade_attack_1]
check_soldier=attack 1
sleep=30000
check_soldier=attack 1
consume=advanced_lance bread,fish,meat
train=attack 1 2

[upgrade_attack_2]
check_soldier=attack 2
sleep=30000
check_soldier=attack 2
consume=heavy_lance bread,fish,meat
train=attack 2 3

[upgrade_attack_3]
check_soldier=attack 3
sleep=30000
check_soldier=attack 3
consume=war_lance bread,fish,meat:2
train=attack 3 4

[upgrade_hp_0]
check_soldier=hp 0
sleep=30000
check_soldier=hp 0
consume=helm bread,fish,meat
train=hp 0 1

[upgrade_hp_1]
check_soldier=hp 1
sleep=30000
check_soldier=hp 1
consume=armour bread,fish,meat:2
train=hp 1 2

[upgrade_hp_2]
check_soldier=hp 2
sleep=30000
check_soldier=hp 2
consume=chain_armour bread,fish,meat:3
train=hp 2 3

[upgrade_hp_3]
check_soldier=hp 3
sleep=30000
check_soldier=hp 3
consume=plate_armour bread,fish,meat:4
train=hp 3 4

[inputs]
bread=10
fish=6
meat=6
lance=2
advanced_lance=2
heavy_lance=2
war_lance=2
helm=2
armour=2
chain_armour=2
plate_armour=2

[buildcost]
trunk=2
stone=5
wood=4
marble=5
gold=4
marblecolumn=3
cloth=2

[idle]
pics=trainingscamp_i_??.png  # ???
hotspot=82 105

[working]
pics=trainingscamp_i_??.png # should be changed to working animation, as soon as it exists
hotspot=82 105
