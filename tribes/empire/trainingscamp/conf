upgrade_hp_3=_Upgrade hitpoints 3

[sleep]
sleep=5000

[upgrade_attack_0]
check_soldier=attack 0 # Fails when aren't any soldier of level 0 attack
sleep=30000
check_soldier=attack 0 # Because the soldier can be expulsed by the player
consume=lance bread,fish,meat
train=attack 0 1

[upgrade_attack_1]
