help=_Grows vine.
program=plantvine
program=harvestvine

[buildcost]
carrier=1
shovel=1
basket=1

[plantvine]
0=findspace size:any radius:1
1=walk coords
2=animation idle 500 # Play a planting animation
3=plant tribe:wine0t
4=animation idle 500
5=return

[harvestvine]
0=findobject attrib:grown_vine radius:1
1=walk object
2=animation idle 10000
3=object harvestvine
4=animation idle 2000
5=createitem grape
6=return

[idle]
pics=idle_??.png
hotspot=3 12

[walk]
dirpics=walk_!!_??.png
hotspot=5 11

[walkload]
dirpics=walk_!!_??.png
hotspot=5 11
