soundfx=../../../../smiths/smith
soundfx=../../../../smiths/sharpening
type=production
size=big
output=wood_lance
output=lance
output=advanced_lance
output=heavy_lance
output=war_lance

program=produce_wood_lance
program=produce_lance
program=produce_advanced_lance
program=produce_heavy_lance
program=produce_war_lance
program=work

[working positions]
weaponsmith=1

[inputs]
iron=8
gold=8
coal=8
wood=8

[work]
call=produce_wood_lance
call=produce_lance
call=produce_advanced_lance
call=produce_heavy_lance
call=produce_war_lance
return=skipped

[produce_wood_lance]
return=skipped unless economy needs wood_lance
consume=wood
sleep=20000
playFX=../../../smiths/smith 192
animate=working 30000
playFX=../../../smiths/sharpening 120
produce=wood_lance

[produce_lance]
return=skipped unless economy needs lance
consume=coal iron wood
sleep=32000
playFX=../../../smiths/smith 192
animate=working 45000
playFX=../../../smiths/sharpening 120
produce=lance

[produce_advanced_lance]
return=skipped unless economy needs advanced_lance
consume=coal iron:2 wood
sleep=32000
playFX=../../../smiths/smith 192
animate=working 45000
playFX=../../../smiths/sharpening 120
produce=advanced_lance

[produce_heavy_lance]
return=skipped unless economy needs war_lance
consume=coal:2 gold iron wood
sleep=32000
playFX=../../../smiths/smith 192
animate=working 45000
playFX=../../../smiths/sharpening 120
produce=heavy_lance

[produce_war_lance]
return=skipped unless economy needs war_lance
consume=coal:2 gold iron:2 wood
sleep=32000
playFX=../../../smiths/smith 192
animate=working 45000
playFX=../../../smiths/sharpening 120
produce=war_lance


[buildcost]
trunk=2
stone=2
marble=2
marblecolumn=3

[idle]
pics=weaponsmith_i_??.png  # ???
hotspot=55 80

[working]
pics=weaponsmith_i_??.png  # ???
hotspot=55 80
