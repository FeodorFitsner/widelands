size=big
output=spear_wooden
output=spear
output=spear_advanced
output=spear_heavy
output=spear_war

[aihints]
prohibited_till=900

[buildcost]
log=2
granite=2
marble=2
marble_column=3

[return_on_dismantle]
log=1
granite=1
marble=2
marble_column=1

[working positions]
weaponsmith=1

[inputs]
iron=8
gold=8
coal=8
planks=8

[programs]
# TRANSLATORS: "Completed/Skipped/Did not start forging a wood spear because ...
produce_spear_wooden=_forging a wooden spear
# TRANSLATORS: "Completed/Skipped/Did not start forging a spear because ...
produce_spear=_forging a spear
# TRANSLATORS: "Completed/Skipped/Did not start forging an advanced spear because ...
produce_spear_advanced=_forging an advanced spear
# TRANSLATORS: "Completed/Skipped/Did not start forging a heavy spear because ...
produce_spear_heavy=_forging a heavy spear
# TRANSLATORS: "Completed/Skipped/Did not start forging a war spear because ...
produce_spear_war=_forging a war spear
# TRANSLATORS: "Completed/Skipped/Did not start working because ...
work=_working

[produce_spear_wooden]
return=skipped unless economy needs spear_wooden
sleep=20000
consume=planks
playFX=../../../sound/smiths/smith 192
animate=working 30000
playFX=../../../sound/smiths/sharpening 120
produce=spear_wooden

[produce_spear]
return=skipped unless economy needs spear
sleep=32000
consume=coal iron planks
playFX=../../../sound/smiths/smith 192
animate=working 45000
playFX=../../../sound/smiths/sharpening 120
produce=spear

[produce_spear_advanced]
return=skipped unless economy needs spear_advanced
sleep=32000
consume=coal iron:2 planks
playFX=../../../sound/smiths/smith 192
animate=working 45000
playFX=../../../sound/smiths/sharpening 120
produce=spear_advanced

[produce_spear_heavy]
return=skipped unless economy needs spear_heavy
sleep=32000
consume=coal:2 gold iron planks
playFX=../../../sound/smiths/smith 192
animate=working 45000
playFX=../../../sound/smiths/sharpening 120
produce=spear_heavy

[produce_spear_war]
return=skipped unless economy needs spear_war
sleep=32000
consume=coal:2 gold iron:2 planks
playFX=../../../sound/smiths/smith 192
animate=working 45000
playFX=../../../sound/smiths/sharpening 120
produce=spear_war

[work]
call=produce_spear_wooden
call=produce_spear
call=produce_spear_advanced
call=produce_spear_heavy
call=produce_spear_war
return=skipped

