[global]
descname=_Vine Farmer
help=Grows Wine
type=generic
menu_pic=menu.png
program=plantvine
program=harvestvine

[buildcost]
carrier=1
shovel=1
basket=1

[plantvine]
0=setdescription tribe:wine0t
1=findspace size:any radius:1
2=walk coords
3=animation idle 500 # Play a planting animation
4=plant
5=animation idle 500
6=return

[harvestvine]
0=findobject attrib:grown_wine radius:1
1=walk object
2=animation idle 10000
3=object harvestwine
4=animation idle 2000
5=createitem grape
6=return

[idle]
pics=idle_??.png
hotspot=5 13

[walk]
dirpics=walk_!!_??.png
hotspot=5 13

[walkload]
dirpics=walk_!!_??.png
hotspot=5 13
