[global]
descname=Bakery		# nicer name to display in GUI

type=production		# basic type (warehouse, production, military)
size=medium
buildable=yes
buildicon=bakery_build.bmp
worker=baker
program=work
output=bread

[inputs]
flour=6
water=6


[work]
0=sleep 20000
1=check water
2=check flour
3=consume flour
4=consume water
5=animation working 20000
6=produce bread

[buildcost]
