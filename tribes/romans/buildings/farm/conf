[global]
descname=Farmer		# nicer name to display in GUI

type=production		# basic type (warehouse, production, military)
size=big
buildable=yes
buildicon=farm_build.png
worker=farmer

program=work

[work]
0=sleep 20000		# sleep the given amount of time
1=worker plant		# cause the worker to run the 'plant' program
2=sleep 5000		# sleep the given amount of time
3=worker harvest		# cause the worker to run the 'harvest' program

[buildcost]
plank=2
stone=2

[idle]
pics=farm_i_??.png  # ???
