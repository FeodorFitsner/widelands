[global] 
type=carrier

# Here come the animations
# For the walk animation, [walk] is a default for all walk animations.
# You can, however, create [walk_nw] etc.. sections for sub-animations in a
# given direction

# The normal idle animation (non-directional)
[idle]
pics=idle_??.bmp
clrkey_r=0
clrkey_g=0
clrkey_b=255
hot_spot_x=5
hot_spot_y=13

# Walking empty-handed
[walk]
clrkey_r=0
clrkey_g=0
clrkey_b=255
hot_spot_x=5
hot_spot_y=13

# Walking with a ware
[walkload]
clrkey_r=0
clrkey_g=0
clrkey_b=255
hot_spot_x=5
hot_spot_y=13
